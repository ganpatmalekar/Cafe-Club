<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".fragments.ContactUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/coffee_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are available at"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="22dp"
                android:fontFamily="@font/fontdiner_swanky"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/buttonBackground"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/textAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Techsys Informatics, Swargate"
                android:textColor="#c49b63"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_my_location"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/textPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8888446688"
                android:textColor="#c49b63"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="techsysinternship@gmail.com"
                android:textColor="#c49b63"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/textWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="http://www.techsysinformatics.in"
                android:textColor="#c49b63"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_website"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have a time? Please give us Feedback"
                android:textColor="#c49b63"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>