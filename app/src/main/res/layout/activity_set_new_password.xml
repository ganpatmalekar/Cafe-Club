<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="20dp"
    tools:context=".activities.SetNewPassword">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp">
        <TextView
            android:id="@+id/txtDear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dear "
            android:textColor="#c49b63"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/txtGetUserEmail"
            android:layout_toRightOf="@+id/txtDear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#c49b63"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please check your email box"
        android:textSize="18sp"
        android:textColor="#c49b63"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/txtOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="20dp"
        android:inputType="number"
        android:padding="20dp"
        android:layout_marginTop="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/txtNewPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New Password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:padding="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/txtConfPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm New Password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:padding="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/setPWD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:textSize="22dp"
        android:textColor="#fff"
        android:background="@color/buttonBackground"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:onClick="setNewPSW"/>
</LinearLayout>